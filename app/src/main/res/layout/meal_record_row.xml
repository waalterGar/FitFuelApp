<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="#DDDDDD"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00F4F2F2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_id_mealRecord"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="id:"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/tv_id_mealRecord_value"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00F4F2F2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mealRecordName"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Meal Name: "
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/tv_mealRecordName_value"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00F4F2F2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quantity:"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/tv_quantity_value"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00F4F2F2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_eaten"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eaten:"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/tv_eaten_value"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00F4F2F2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mealRecordDate"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date:"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/tv_mealRecordDate_value"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00F4F2F2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_eaten"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/blau_boto"
            android:text="Mark eaten" />

        <Button
            android:id="@+id/btn_mealDetails"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/blau_boto"
            android:text="Meal Details" />

    </LinearLayout>

</LinearLayout>

